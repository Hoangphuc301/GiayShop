@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="container mt-4">

    <h2 class="text-center mb-4 text-primary fw-bold">Danh Mục Thương Hiệu Giày</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("them")" class="btn btn-success">
            ➕ Thêm mới
        </a>
    </div>

    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tên thương hiệu</th>
                <th>Mô tả</th>
                <th>Logo</th>
                <th style="width: 15%;">Tác vụ</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.ThuongHieu)
            {
                <input type="hidden" name="Math" value="@item.Math" />
                <tr>
                    <td>@item.Tenth</td>
                    <td>@item.Mota</td>
                    <td>
                        <img src="@(Url.Content("~/images/Logo/" + item.Logo))"
                             alt="@item.Tenth"
                             style="width: 60px; height: 60px; object-fit: contain; border-radius: 8px;" />
                    </td>


                    <td>
                        <a href="@Url.Action("sua", "ThuongHieu", new { area = "Admin", id = item.Math })" class="btn btn-success">✏️ Sửa</a>
                        <a href="@Url.Action("xoa", "ThuongHieu", new { area = "Admin", id = item.Math })" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa không?')">🗑️ Xóa</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="text-start mt-3">
        <a href="@Url.Content("~/Admin")" class="btn btn-outline-secondary">
            ⬅️ Quay lại
        </a>
    </div>
</div>
