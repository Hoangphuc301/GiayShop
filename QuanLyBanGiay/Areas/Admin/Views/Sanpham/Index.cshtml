@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="container mt-4">

    <h2 class="text-center mb-4 text-primary fw-bold">Danh Mục Màu Giày</h2>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Success"]
        </div>
    }

    <div class="text-end mb-3">
        <a href="@Url.Action("them")" class="btn btn-success">
            ➕ Thêm mới
        </a>
    </div>

    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Danh mục</th>
                <th>Thương hiệu</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Ảnh</th>
                <th>Trạng thái</th>
                <th style="width:15%;">Tác vụ</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.Sanpham)
            {
                <tr>
                    <td>@item.Madm</td>
                    <td>@item.Math</td>
                    <td>@item.Tensp</td>
                    <td>@item.Gia</td>
                    <td>@item.Mota</td>
                    <td>
                        <img src="@item.Hinhdaidien" alt="@item.Tensp" width="60" />
                    </td>
                    <td>@item.Trangthai</td>
                    <td>
                        <a href="@Url.Action("sua", "Sanpham", new { area="Admin", id=item.Masp })" class="btn btn-success">✏️ Sửa</a>
                        <a href="@Url.Action("xoa", "Sanpham", new { area="Admin", id=item.Masp })" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">🗑️ Xóa</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="text-start mt-3">
        <a href="@Url.Content("~/Admin")" class="btn btn-outline-secondary">
            ⬅️ Quay lại
        </a>
    </div>
</div>
