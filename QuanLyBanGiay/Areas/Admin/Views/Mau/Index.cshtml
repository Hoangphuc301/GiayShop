@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="container mt-4">

    <h2 class="text-center mb-4 text-primary fw-bold">Danh Mục Màu Giày</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("them")" class="btn btn-success">
            ➕ Thêm mới
        </a>
    </div>

    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tên màu</th>
                <th>Hiển thị</th>
                <th style="width: 15%;">Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Mau)
            {
                <tr>
                    <td>@item.Tenmau</td>
                    <td>
                        <div style="
                            width: 30px;
                            height: 30px;
                            border-radius: 50%;
                            border: 1px solid #ccc;
                            margin: auto;
                            background-color: @Hienthimau(item.Tenmau);
                            box-shadow: 0 0 3px rgba(0,0,0,0.3);
                            ">
                        </div>

                    </td>
                    <td>
                        <a href="@Url.Action("sua", "Mau", new { area = "Admin", id = item.Mamau })" class="btn btn-success btn-sm">
                            ✏️ Sửa
                        </a>
                        <a href="@Url.Action("xoa", "Mau", new { area = "Admin", id = item.Mamau })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa không?')">
                            🗑️ Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-start mt-3">
        <a href="@Url.Content("~/Admin")" class="btn btn-outline-secondary">
            ⬅️ Quay lại
        </a>
    </div>
</div>

@functions {
    string Hienthimau(string tenMau)
    {
        switch (tenMau.ToLower())
