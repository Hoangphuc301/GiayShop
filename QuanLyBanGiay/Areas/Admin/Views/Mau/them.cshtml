@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">➕ Thêm màu sản phẩm</h2>

    <form asp-area="Admin" asp-controller="Mau" asp-action="them" method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label fw-semibold">Tên màu</label>
            <input name="Tenmau" class="form-control" maxlength="50" required />
        </div>

        <div class="row mt-4">
            <div class="col-6">
                <a href="@Url.Content("~/Admin/Mau")"
                   class="btn btn-outline-secondary w-100">
                    Quay lại
                </a>
            </div>

            <div class="col-6">
                <button type="submit" class="btn btn-primary w-100">
                    Thêm mới
                </button>
            </div>
        </div>

    </form>
</div>
