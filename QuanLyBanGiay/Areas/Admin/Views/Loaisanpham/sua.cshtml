@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var dm = ViewBag.Loaisanpham;
}

<div class="container mt-4" style="max-width:700px;">
    <h2 class="mb-3">Sửa loại sản phẩm</h2>

    <form asp-area="Admin" asp-controller="Loaisanpham" asp-action="sua" method="post" class="card p-4 shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Madm" value="@dm.Madm" />

        <div class="mb-3">
            <label class="form-label">Tên loại sản phẩm</label>
            <input name="Tendm" value="@dm.Tendm" class="form-control" maxlength="50" />
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea name="Mota" class="form-control" rows="3" maxlength="255">@dm.Mota</textarea>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                <a href="@Url.Action("Index","Loaisanpham", new { area="Admin"})"
                   class="btn btn-outline-secondary w-100">Quay lại</a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-primary w-100">Lưu</button>
            </div>
        </div>
    </form>
</div>
