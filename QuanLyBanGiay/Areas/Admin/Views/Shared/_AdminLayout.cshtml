@{
    ViewData["Title"] = "Quản trị viên";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="d-flex">

        <!-- SIDEBAR -->
        <nav class="sidebar bg-dark text-white p-3 vh-100">
            <div class="sidebar-header mb-4 fs-5">
                <i class="fa-solid fa-user-shield me-2"></i> Trang Admin
            </div>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="mb-1">
                    <button class="btn btn-toggle align-items-center rounded collapsed text-white w-100"
                            data-bs-toggle="collapse" data-bs-target="#categoryMenu" aria-expanded="false">
                        <i class="fa-solid fa-layer-group me-2"></i> Danh mục
                    </button>
                    <div class="collapse" id="categoryMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ms-3">
                            <li><a class="nav-link text-white" asp-area="Admin" href="/Admin/Loaisanpham"><i class="fa-solid fa-list me-2"></i>Loại sản phẩm</a></li>
                            <li><a class="nav-link text-white" asp-area="Admin" href="/Admin/ThuongHieu"><i class="fa-solid fa-tag me-2"></i>Thương hiệu</a></li>
                            <li><a class="nav-link text-white" asp-area="Admin" href="/Admin/Mau"><i class="fa-solid fa-palette me-2"></i>Màu</a></li>
                            <li><a class="nav-link text-white" asp-area="Admin" href="/Admin/Size"><i class="fa-solid fa-ruler me-2"></i>Size</a></li>
                            <li><a class="nav-link text-white" asp-area="Admin" href="/Admin/Sanpham"><i class="fa-solid fa-boxes-stacked me-2"></i>Sản phẩm</a></li>
                            <li><a class="nav-link text-white" asp-area="Admin" href="/Admin/Taikhoan"><i class="fa-solid fa-user me-2"></i>Tài khoản</a></li>
                        </ul>
                    </div>
                </li>
                <li class="mt-3">
                    <a class="nav-link text-white" href="http://styleofme.vn:7025/">
                        <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </nav>

        <!-- MAIN CONTENT -->
        <main class="content flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
