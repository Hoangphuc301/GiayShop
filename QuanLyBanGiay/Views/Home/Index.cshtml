@{
    ViewData["Title"] = "Trang chủ - StyleOfMe";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Khám phá bộ sưu tập giày StyleOfMe 👟</h1>
        <p class="text-muted">Thời trang - Cá tính - Đậm chất riêng của bạn</p>
    </div>

    <!-- Banner chính -->
    <div class="banner mb-5 text-center">
        <img src="~/images/Banner.png" alt="Banner Giày">
    </div>

    <!-- Danh sách loại giày -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <img src="~/images/giay-nam.jpg" alt="Giày nam" class="img-fluid rounded shadow-sm">
            <h5 class="mt-3">Giày Nam</h5>
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/giay-nu.jpg" alt="Giày nữ" class="img-fluid rounded shadow-sm">
            <h5 class="mt-3">Giày Nữ</h5>
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/giay-sneaker.jpg" alt="Sneaker" class="img-fluid rounded shadow-sm">
            <h5 class="mt-3">Sneaker</h5>
        </div>
    </div>
</div>
